<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context=".SignIn" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">



    <EditText android:layout_height="wrap_content" android:layout_width="239dp" android:inputType="textEmailAddress" android:hint="Enter Your Email" android:layout_centerVertical="true" android:layout_alignStart="@+id/signup" android:id="@+id/email"/>

    <EditText android:layout_height="wrap_content" android:layout_width="187dp" android:inputType="textPassword" android:hint="Enter Password" android:layout_alignStart="@+id/email" android:id="@+id/pass" android:layout_marginBottom="189dp" android:layout_alignParentBottom="true"/>

    <Button android:layout_height="wrap_content" android:layout_width="119dp" android:id="@+id/login" android:layout_marginBottom="123dp" android:layout_alignParentBottom="true" android:text="Login" android:background="@android:color/holo_purple" android:layout_gravity="center" android:layout_centerHorizontal="true"/>

    <TextView android:layout_height="34dp" android:layout_width="201dp" android:id="@+id/signup" android:layout_marginBottom="33dp" android:layout_alignParentBottom="true" android:text="Not yet Registered ? Sign up.." android:layout_gravity="center" android:layout_centerHorizontal="true" android:textColor="@android:color/holo_red_dark"/>

    <ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/imageButton2" app:srcCompat="@drawable/ic_assignment_black_24dp" android:layout_toStartOf="@+id/email" android:layout_alignTop="@+id/email"/>

    <ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/imageButton3" app:srcCompat="@drawable/ic_message_black_24dp" android:layout_toStartOf="@+id/email" android:layout_alignBottom="@+id/pass"/>

    <ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/imageButton4" app:srcCompat="@drawable/ic_home_black_24dp" android:layout_alignTop="@+id/pass" android:layout_toEndOf="@+id/pass"/>

    <ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignStart="@+id/login" android:id="@+id/imageButton5" app:srcCompat="@drawable/ic_message_black_24dp" android:layout_marginTop="96dp" android:layout_alignParentTop="true"/>

    <TextView android:layout_height="31dp" android:layout_width="157dp" android:id="@+id/forgot" android:layout_marginBottom="79dp" android:layout_alignParentBottom="true" android:text="Forgot Password??" android:textColor="@android:color/holo_red_dark" android:layout_alignEnd="@+id/pass"/>

</RelativeLayout>